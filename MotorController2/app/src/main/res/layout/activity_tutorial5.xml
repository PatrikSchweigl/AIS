<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rgBaudrate" />

    <RadioGroup
        android:id="@+id/rgBaudrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvBaudrate" >

    </RadioGroup>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="14">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forward"
            android:id="@+id/buttonForward"
            android:layout_column="1"
            android:layout_row="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/buttonStop"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            android:id="@+id/buttonRight"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left"
            android:id="@+id/buttonLeft"
            android:layout_column="0"
            android:layout_row="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/buttonBack"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="Bar_UP"
            android:id="@+id/barUp"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bar_DOWN"
            android:id="@+id/barDown"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Data"
            android:id="@+id/SensorData"
            android:layout_row="10"
            android:layout_column="0" />

        <EditText
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/fieldX"
            android:layout_row="11"
            android:layout_column="0"
            android:text="X" />

        <EditText
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:id="@+id/fieldY"
            android:layout_row="11"
            android:layout_column="1"
            android:text="Y" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fieldTheta"
            android:layout_row="11"
            android:layout_column="2"
            android:text="Theta" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Paths"
            android:id="@+id/Paths"
            android:layout_row="13"
            android:layout_column="0" />

        <Button
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Homography"
            android:id="@+id/Homography"
            android:layout_row="13"
            android:layout_column="1" />

        <Button
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:text="Misc"
            android:id="@+id/Misc"
            android:layout_row="13"
            android:layout_column="2" />

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_gravity="right" />

</LinearLayout>